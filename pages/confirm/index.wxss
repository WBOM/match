/* pages/confirm/index.wxss */
.container{
  margin: 0;
  padding: 0;
  background: #ffffff;
  font-size: 0.88rem;
  color: #101010;
}
.match-information{
  display: flex;
  width: 100%;
  box-sizing: border-box;
  flex-flow: column nowrap;
  padding: 1rem 1rem 0;
}
.match-information text{
  font-size: 0.88rem;
  color: #101010;
  margin-bottom: 0.7rem;
}
/*****************个人信息********************/
.personal-information{
  padding: 1rem 1rem 0;
  box-sizing: border-box;
  width: 100%;
  display: flex;
  flex-flow: column wrap;
  justify-content: flex-start;
  overflow: hidden;
}
.personal-information view {
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  margin-bottom: 0.7rem;
}
.edit{
  color: #E51C23;
}
.personal-information text{
  margin-bottom: 0.7rem;
}
/*******************费用**************************/
.cost{
  padding: 1rem 1rem 0;
  box-sizing: border-box;
  width: 100%;
  display: flex;
  flex-flow: column nowrap;
  justify-content: flex-start;
  overflow: hidden;
}
.cost text{
  margin-bottom: 1rem;
}
.cost view{
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  margin-bottom: 1rem;
  line-height: 1rem;
  height: 1rem;
  overflow: hidden;
}
.project{
  width: 80%;
}
.price{
  width: 20%;
}
.prompt{
  color: #9e9e9e;
  font-size: 0.7rem;
  text-align: left;
}
/*******************底部**************************/
.goPayment{
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  position: fixed;
  bottom: 0;
  width: 100%;
  left: 0px;
  font-size: 1rem;
  height: 3.13rem;
  line-height: 3.13rem;
  border: 0.06rem solid rgba(204, 204, 204, 1);
  border-top-left-radius: 0.3rem;
  border-top-right-radius: 0.3rem;
}
.goPayment view{
  display: flex;
  margin-left: 2rem;
}
.goPayment view text{
  color: #E51C23;
}
.goPayment button{
  justify-content: center;
  align-items: center;
  height: 100%;
  display: flex;
  width: 6.88rem;
  position: absolute;
  right: 0;
  background: #E51C23;
  color: #ffffff;
}