/* pages/address/index.wxss */
page{
  background: #F9F9F9 100%;
}
.container{
  margin: 0;
  padding: 0;
}
.address-list{
  display: flex;
  width: 100%;
  flex-flow: column nowrap;
  justify-content: center;
}
.address-box{
  display: flex;
  flex-flow: column nowrap;
  justify-content: center;
  width: 100%;
  height: 3.56rem;
  background: #FFFFFF;
  padding: 0 1rem;
  box-sizing: border-box;
  margin-bottom: 0.5rem;
}
.recipient{
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
}
.recipient .name{
  font-size: 0.88rem;
}
.recipient .phone{
  font-size: 0.75rem;
  color: #A4A4A4;
  margin-left: 0.5rem;
}
.address-text{
  width: 100%;
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  justify-content: space-between;
}
.address-text .default{
  color: #E51C23;
  font-size: 0.75rem;
  margin-right: 0.5rem;
}
.address-text .address{
  font-size: 0.88rem;
  flex: 1;
}
.address-text .edit{
  color: #A4A4A4;
  font-size: 0.88rem;
}
.new{
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 2.5rem;
  background: #E51C23;
  color: #FFFFFF;
  font-size: 0.75rem;
}