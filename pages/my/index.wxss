/* pages/my/my.wxss */
.container{
  margin: 0;
  padding: 0;
  background: #FDFBFB;
}
.header{
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  padding: 1rem;
  box-sizing: border-box;
  width: 100%;
  height: 6.06rem;
  background: #E51C23;
  color: #FFFFFF;
}
.header-portrait{
  display: flex;
  width: 4.38rem;
  height: 4.38rem;
  margin-right: 0.7rem;
}
.header-portrait button{
  display: flex;
  justify-content: center;
  align-items: center;
  overflow: hidden;
  font-size: 0.6rem;
  width: 4.38rem;
  height: 4.38rem;
  border-radius: 50%;
}
open-data[type="userAvatarUrl"]{
  display: flex;
  overflow: hidden;
  width: 4.38rem;
  height: 4.38rem;
  border-radius: 50%;
}
.header-information{
  flex: 1;
  display: flex;
  flex-flow: column nowrap;
  padding: 0 0.5rem;
  box-sizing: border-box;
}
.header-information-1{
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 0.8rem;
}

open-data[type="userNickName"]{
  font-size:1.06rem;
}
.header-information-1 text:first-child{
  font-size: 1.06rem;
}
.header-information-2{
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  align-items: center;
}
.header-information-2 image{
  padding: 0.2rem;
  width: 0.8rem;
  height: 0.8rem;
}
.money{
  font-size: 0.88rem;
  flex-grow:1;
}
.cash-withdrawal{
  font-size: 0.88rem;
}
/***************/
.features-list{
  width: 100%;
  display: flex;
  flex-flow: column nowrap;
  align-items: center;
}
.features-box{
  width: 100%;
  height: 3rem;
  line-height: 3rem;
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  align-items: center;
  border-bottom: 0.06rem rgb(211, 211, 211) solid;
  background: #FFFFFF;
}
.features-box image{
  display: flex;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
}
.features-box image:first-child{
  width: 3.2rem;
  height: 3.12rem;
  padding: 0.9rem; 
  border-bottom: 0.06rem #FFFFFF solid;
}
.features-box text{
  flex: 1;
  font-size: 0.88rem;
  margin-left: 0.5rem;
}
.features-box .next{
  padding: 0.5rem;
  width: 2rem;
  height: 2rem;
  box-sizing: border-box;
}
.blank{
  width: 100%;
  height: 1.5rem;
}