/* pages/pay/index.wxss */
.cotainer{
  margin: 0;
  padding: 0;
  font-size: 0.75rem;
}
.choose-pay{
  display: flex;
  justify-content: flex-start;
  width: 100%;
  padding: 0 1rem;
  box-sizing: border-box;
  border-top: 0.06rem #cccccc solid;
  margin-top: 1rem;
}
.radio-group{
  display: flex;
  flex-flow:  column nowrap;
}
.radio-group label{
  margin: 1rem 0;
  display: flex;
  align-items: center;
}
.pay{
  position: fixed;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 3rem;
  line-height: 3.13rem;
  border-radius: 0.25rem;
  background: #E51C23;
  color: #ffffff;
}
