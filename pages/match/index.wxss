/* pages/match/match.wxss */
.container{
  width: 100%;
  padding: 0.5rem 1rem;
}
.option-card{
  margin-bottom: 0.5rem;
  width:100%;
  height:8.5rem;
  border-radius: 0.4rem;
  box-sizing: border-box;
}
.option-card image{
  width: 100%;
  height: 100%;
  overflow: hidden;
}
.option-card text{
  position: relative;
  font-size: 1.6rem;
  color: #FFFFFF;
}
.option-card text[id=Card1]{
  top: -5.5rem;
  left: 70%;
}
.option-card text[id=Card2]{
  top: -5.5rem;
  left: 62%;
}
.option-card text[id=Card3]{
  top: -5rem;
  left: 65%;
}
.option-card text[id=Card4]{
  top: -7.5rem;
  left: 70%;
}