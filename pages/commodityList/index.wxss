/* pages/commodityList/index.wxss */
.container{
  margin: 0;
  padding: 0;
  background: #F9F9F9;
}
.header{
  width: 100%;
  position: fixed;
  background: #FFFFFF;
}
.search-box{
  margin: 0.8rem;
  height: 1.3rem;
  line-height: 1.3rem;
  font-size: 0.7rem;
  border-radius: 1.25rem 1.25rem 1.25rem 1.25rem;
  background-color: rgba(255, 255, 255, 1);
  box-shadow: 0rem 0rem 0.13rem 0rem rgba(170, 170, 170, 1);
  border: 0.06px solid rgba(255, 255, 255, 0);
}
.search-box icon{
  width: 1rem;
  height: 1rem;
  margin: 0.1rem 0.3rem;
  float: left;
}
.search-box input{
  color: #101010;
}
.search-no{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100vh;
  font-size: 0.88rem;
}
.arrangement{
  width: 100%;
  padding: 0 1rem 0.5rem;
  box-sizing: border-box;
  display: flex;
  font-size: 0.88rem;
  flex-flow: row nowrap;
  justify-content: space-around;
  text-align: center;
  align-items: center;
}
.arrangement .triangle{
  margin-left: 0.3rem;
  margin-top: 0.35rem;
}
/*********************/
.commodity-list{
  margin-top: 4.5rem;
  display: flex;
  flex-flow: row wrap;
  justify-content: space-between;
  width: 100%;
  padding:0.8rem;
  box-sizing: border-box;
}
.commodity-box{
  display: flex;
  height: 14.88rem;
  flex-flow: column nowrap;
  width: 48%;
  margin:0 0 0.7rem;
  border-radius: 0.25rem;
  background: #FFFFFF;
}
.commodity-box image{
  display: flex;
  width: 100%;
  height: 11.5rem;
  border-radius: 0.25rem;
}
.title{
  padding: 0.2rem 0.2rem 0;
  width: 100%;
  font-size: 0.75rem;
  color: #101010;
}
.price{
  padding: 0.2rem;
  width: 100%;
  font-size: 1.13rem;
  color: #E60B30;
}
.sponsor{
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  padding: 0;
  right: 0;
  bottom: 3.5rem;
  border-radius: 50%;
  width: 3rem;
  height: 3rem;
  font-size: 0.88rem;
  background: #E51C23;
  color: #FFFFFF;
}