/* pages/organiser/index.wxss */
.container{
  margin: 0;
  padding: 0;
  background: #F9F9F9;
}
/****************************/
.option{
  text-align: center;
  display: flex;
  flex-flow: row;
  justify-content: space-between;
  width: 100%;
  height: 2rem;
  line-height: 2rem;
  font-size: 0.78rem;
  color: #101010;
  background: #ffffff;
  border-bottom: 0.06rem #BBBBBB solid;
}
.option view{
  display: block;
  align-items: center;
  width: 25%;
  padding: 0 0.8rem;
}
.option view text{
  display: block;
  width: 100%;
}
.active{
  color:#F65959;
  border-bottom: 0.08rem solid #F65959;
  font-weight: 400;
}
.show{
  display: block;
}
.hidden{
  display: none;
}
/*内容区域*/
.introduction{
  width: 100%;
  font-size: 0.78rem;
  color: #101010;
}
.introduction button{
  height: 2.22rem;
  line-height: 2.22rem;
  margin: 1rem;
  border-radius: 0.28rem;
  font-size: 0.78rem;
}
/**************场次*****************/
.section{
  width: 100%;
  display: flex;
  flex-flow:column nowrap;
  justify-content: center;
  align-items: center;
  background: #ffffff;
}
.section-title{
  margin: 1rem 0;
  display: flex;
}
.section picker{
  width: 65%;
  display:block;
  height: 1.5rem;
  line-height: 1.5rem;
  box-sizing: border-box;
  border-radius: 0.25rem;
  border: 0.06rem #BBBBBB solid;
  padding-left: 0.3rem;
  margin-bottom: 0.5rem;
}
.picker{
  margin: 0 auto;
  width: 16rem;
}
.triangle{
  right: 23%;
  margin-top: -1rem;
}
/************************/
.button{
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  padding: 0 1rem;
  background: #ffffff;
}
.button .invite{
  width:7rem;
  background: #686868;
  color: #ffffff;
}
.submit{
  width: 5rem;
  background: #E51C23;
  color: #ffffff;
}
/**********************************/
.vs-list{
  width: 100%;
  display: flex;
  flex-flow: column nowrap; 
}
.vs-box{
  display: flex;
  flex-flow: column nowrap;
  justify-content: space-between;
  width: 100%;
  height: 8.56rem;
  background: #ffffff;
  margin-top: 1rem;
}
.score{
  text-align: center;
  width: 3rem;
  margin: 0.5rem auto 0;
  color: #101010;
  font-size: 1rem;
}
.player{
  width: 100%;
  display: flex;
  flex-flow: row nowrap;
  text-align: center;
  font-size: 1.25rem;
}
.player text{
  flex: 1;
}
.vs-information{
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  padding: 0 1.5rem;
  font-size: 0.88rem;
  margin-bottom: 0.5rem;
}
/*****************************/
.vs-box form .score{
  width: 8rem;
}
.vs-box form .score .section{
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  align-items: center;
  margin: 0 auto;
}
.section input{
  display: block;
  border: 0.06rem #BBBBBB solid;
  border-radius: 0.25rem;
}
.vs-box form .player{
  margin: 1rem 0;
}
.vs-box form .vs-information{
  display: flex;
  flex-flow: row nowrap;
  margin-top: 1.5rem;
  height: 2rem;
  line-height: 2rem;
}
.title-1{
  width: 3rem;
}
.section-date{
  width:5.5rem;
  border: 0.06rem #BBBBBB solid;
  border-radius: 0.25rem;
  margin-right: 0.5rem;
  padding-left: 0.3rem;
}
.section-time{
  width: 3rem;
  border: 0.06rem #BBBBBB solid;
  border-radius: 0.25rem;
  padding-left: 0.3rem;
}
.date .picker{
  color: #686868;
}
.time .picker{
  color: #686868;
}
.vs-information button{
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 0 0 0 0.5rem;
  width: 4rem;
  height: 2rem;
  padding: 0.5rem;
}
/*******************报名列表*******************/
.signUpList{
  width: 100%;
  height: auto;
  background: #ffffff;
}
.player-box{
  display: flex;
  flex-flow: column nowrap;
  width: 100%;
  height: 6rem;
  padding: 0.5rem 1rem;
  box-sizing: border-box;
  border-bottom: 0.06rem #BBBBBB solid;
  overflow: hidden;
  
}
.header{
  display: flex;
  margin: 0.5rem 0 1rem;
  justify-content: center;
  align-items: center;
}
.head-1{
  flex: 2;
  font-size: 1.13rem;
}
.head-2{
  flex: 2;
  font-size: 1.13rem;
}
.head-3{
  text-align: right;
  flex: 2;
  font-size: 0.88rem;
  color: #666666;
}
.head-4{
  text-align: right;
  flex: 1;
  font-size: 0.88rem;
  color: #666666;
}
.name{
  display: flex;
  color: #666666;
  font-size: 1rem;
  margin-bottom: 1rem;
}
.bottom{
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
}
.bottom text{
  color: #666666;
  font-size: 0.88rem;
}
.bottom button{
  display: flex;
  font-size: 0.88rem;
  justify-content: center;
  align-items: center;
  margin: -0.8rem 0 0;
  height: 1.75rem;
  width: 6.63rem;
  padding: 0;
  background: #686868;
  color: #ffffff;
  border-radius: 0.81rem;
}
button.end{
  border: 0rem #ffffff solid;
  background: #ffffff;
  margin: 1rem 0;
  height: 2.5rem;
  line-height: 2.5rem;
}
/*************淘汰赛*****************/
.knockout-box{
  display: flex;
  flex-flow: column nowrap;
  justify-content: center;
  align-items: center;
  width: 100%;
  margin-top: 1rem;
  background: #ffffff;
  padding-bottom: 1rem;
}
.knockout-box .title{
  font-size: 1rem;
  margin: 1rem;
  align-self: flex-start;
}
.knockout-box .checkIn{
  font-size: 1rem;
}
.knockout-box .checkIn-number{
  font-size: 1.75rem;
  margin-bottom: 1.5rem;
}
.knockout-box text{
  margin-bottom: 1rem;
}
.knockout-box view{
  width: 100%;
  display: flex;
  flex-flow: row nowrap;
}
.knockout-box button{
  width: 50%;
  margin: 0;
  height: 3rem;
  line-height: 3rem;
}
.knockout-box button:first-child{
  background: #686868;
  color: #ffffff;
}
/****************************裁判列表**********************************/
.referee-list{
  display: flex;
  flex-flow: column nowrap;
  width: 100%;
  box-sizing: border-box;
}
.referee-box{
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  justify-content: space-between;
  padding: 0 1rem;
  box-sizing: border-box;
  width: 100%;
  height: 5.31rem;
  margin-bottom: 0.8rem;
  background: #ffffff;
}
.referee-box .left{
  width: 100%;
  display: flex;
  flex-flow: column nowrap;
  align-content: space-between;
}
.left text{
  margin: 1rem 0;
}
.referee-box .right{
  width: 100%;
  display: flexl;
  flex-flow: row nowrap;
  justify-content: space-between;
  font-size: 0.88rem;
  border: 0;
}
.refuse{
 color:  #E51C23;
}
.right button{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 4rem;
  height: 1.88rem;
  margin: 0;
  float: left;
  margin-left: 0.5rem;
}
/**********************比赛结果**********************/
.rank-list{
  width: 100%;
  display: flex;
  flex-flow: column nowrap;
  background: #ffffff;
  padding-bottom: 0.5rem;
}
.rank-box{
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  margin: 0.3rem 0;
  width: 100%;
  height: 4.38rem;
  padding: 0.3rem 1rem;
  box-sizing: border-box;
  
}
.ranking{
  width: 1.81rem;
  height: 2.69rem;
  margin-right: 1rem;
}
.ranking image{
  width: 100%;
  height: 100%;
}
.add-player{
  width: 3.19rem;
  height: 3.19rem;
  background: #F4F4F4;
  margin-right: 1rem;
}
.player-information{
  display: flex;
  flex-flow: column nowrap;
}
.player-information text{
  color: #101010;
  font-size: 1rem;
  margin-bottom: 0.5rem;
}
.player-information input{
  border: 0.06rem #BBBBBB solid;
  border-radius: 0.25rem;
  padding-left: 0.25rem;
}
.more{
  display: inline-flex;
  align-self: center;
  width:100%;
  padding: 0 45%;
  box-sizing: border-box;
  height: 1.5rem;
  margin-top: 0.5rem;
}
/******相册******/
.album{
  width: 100%;
  display: flex;
  flex-flow: column nowrap;
}
.album text{
  color: #101010;
  font-size: 1rem;
  margin:  0.5rem 1rem;
}
.album-box{
  display: flex;
  flex-flow: row wrap;
  align-items: center;
  justify-content: flex-start;
  box-sizing: border-box;
  width: 100%;
  padding: 0.5rem 1rem;
  background: #ffffff;
}
.album-box image{
  width: 8.31rem;
  height: 8.31rem;
  margin: 0.5rem 0.5rem 0 0;
  background: #F4F4F4;
}
/*****视频*****/
.video{
  width: 100%;
  display: flex;
  flex-flow: column nowrap;
}
.video text{
  color: #101010;
  font-size: 1rem;
  margin:  0.5rem 1rem;
}
.video video{
  display: flex;
  margin: 0.5rem auto;
  width: 16rem;
  height: 10.69rem;
  border-radius: 0.5rem;
}
/****多行输入框****/
.text{
  width: 100%;
  display: flex;
  flex-flow: column nowrap;
}
.text text{
  color: #101010;
  font-size: 1rem;
  margin:  0.5rem 1rem;
}
textarea {
  padding: 1rem 0;
}
.textarea-wrp{
  width: 16.31rem;
  margin: 0.25rem auto;
  height: 9.38rem;
  padding: 0 0.5rem;
  background-color: #fff;
  border-radius: 0.25rem;
}
/****底部发布按钮****/
.release{
  height: 3rem;
  line-height: 3rem;
  background: #E51C23;
  color: #ffffff;
}