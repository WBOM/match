/* pages/microRace/index.wxss */
.container{
  margin: 0;
  padding: 0;
  background: #F9F9F9;
}
.header{
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  height: 2.81rem;
  line-height: 2.81rem;
  padding: 0 1rem;
  box-sizing: border-box;
  background: #ffffff;
  margin-bottom: 0.5rem;
}
.header .image{
  display: flex;
  justify-content: center;
  align-items: center;
}
.image image{
  width: 1.4rem;
  height: 1.4rem;
  border: 0.06rem #101010  solid;
  border-radius: 50%;
}
/***********************搜索框***************************/
.search-box{
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  width: 1.6rem;
  height: 1.6rem;
  line-height: 1.6rem;
  font-size: 0.7rem;
  margin-right: 1rem;
  border-radius: 1.25rem 1.25rem 1.25rem 1.25rem;
  background-color: rgba(255, 255, 255, 1);
  box-shadow: 0rem 0rem 0.13rem 0rem rgba(170, 170, 170, 1);
  border: 0.06px solid rgba(255, 255, 255, 0);
}
.search-box icon{
  width: 1rem;
  height: 1rem;
  margin: 0.3rem 0.3rem;
  float: left;
}
.search-box input{
  color: #101010;
}
/************排序********************/
.sort{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 4rem;
  margin: 0;
  margin-right: 1.2rem;
  font-size: 0.88rem;
}
.triangle{
  margin-top: 0.05rem;
  margin-left: 1.4rem;
}
/***内容***/
.main-list{
  width: 100%;
  display: flex;
  flex-flow: column nowrap;
  background: #F9F9F9;
}
.main-box{
  width: 100%;
  height: 16.13rem;
  background: #ffffff;
  display: flex;
  flex-flow: column nowrap;
  justify-content: flex-start;
  padding: 0.8rem 1.5rem;
  box-sizing: border-box;
  margin-bottom: 0.5rem;
}
.main-box .user{
  width: 100%;
  display: flex;
  flex-flow: row nowrap;
  height: 2.3rem;
  line-height: 2.3rem;
}
.main-box .user image{
  display: flex;
  width: 2.3rem;
  height: 2.3rem;
  border-radius: 50%;
  margin-right: 1rem;
}
.user text{
  width: 100%;
  font-size: 0.88rem;
  color: #101010;
}
.content text{
  display:-webkit-box ;
  overflow:hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:3; 
  font-size: 0.88rem;
  line-height: 1.46rem;
  width: 100%;
  margin: 0.5rem 0;
}
.photos{
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  width: 100%;
  height: 4.25rem;
  background: #ffffff;
}
.photos image{
  display: flex;
  width: 6rem;
  height: 4rem;
}
/*****关注*****/
.attention{
  width: 100%;
  height: 2rem;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  margin-top: 0.5rem;
}
.attention image{
  width: 1.19rem;
  height: 1.19rem;
  margin-right: 0.5rem;
}
.attention text{
  font-size: 0.88rem;
}
