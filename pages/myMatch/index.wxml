<!--pages/myMatch/index.wxml-->
<view class='container'>
    <view class='option'>
    <view>
      <text class="swiper-tab-item {{currentTab==0?'active':''}}" data-current="0" bindtap="clickTab">待参赛</text>
    </view>
    <view>
       <text class="swiper-tab-item {{currentTab==1?'active':''}}" data-current="1" bindtap="clickTab">参与的比赛</text>
    </view>
    <view>
       <text class="swiper-tab-item {{currentTab==2?'active':''}}" data-current="2" bindtap="clickTab">我的报名</text>
    </view>
    <view>
       <text class="swiper-tab-item {{currentTab==3?'active':''}}" data-current="3" bindtap="clickTab">我的发布</text>
    </view>
  </view>
  <view class='introduction'>
    <view class = "{{currentTab == 0 ? 'show':'hidden'}}" >
      <scroll-view>
        <view wx:if="{{waitingList==''}}" class='none'>
          <text>暂无数据！</text>
        </view>
        <view wx-else class='match-box' wx:for="{{waitingList}}" wx:for-item="waiting" wx:key="{{index}}">
          <view class='time'>
            <text>{{waiting.starttime}}</text>
            <text>开始</text>
          </view>
          <view class='content'>
            <view class='photo'>
              <image src='{{waiting.img_orogin}}'></image>
            </view>
            <view class='text'>
              <view>
                <text class='title'>{{waiting.title}}</text>
              </view>
              <view class='address'>
                <text>{{waiting.weizhi}}</text>
              </view>
              <view class='project'>
                <text>羽毛球赛 单打</text>
                <text>已报名 98人</text>
              </view>
            </view>
          </view>
        </view>
      </scroll-view>
    </view>
    <view class = "{{currentTab == 1 ? 'show':'hidden'}}" >
      <scroll-view>
      <view wx:if="{{''==''}}" class='none'>
          <text>暂无数据！</text>
        </view>
        <view class='match-box'>
          <view class='time'>
            <text>19年01月28日  23：00</text>
            <text></text>
          </view>
          <view class='content'>
            <view class='photo'>
              <image src='../image/index.png'></image>
            </view>
            <view class='text'>
              <view>
                <text class='title'>2019 大理马拉松</text>
              </view>
              <view class='address'>
                <text>云南省 大理白族自治州 大121212121212</text>
              </view>
              <view class='project'>
                <text>羽毛球赛 单打</text>
                <text>已参赛</text>
              </view>
            </view>
          </view>
        </view>
        <view class='match-box'>
          <view class='time'>
            <text>19年01月28日  23：00</text>
            <text></text>
          </view>
          <view class='content'>
            <view class='photo'>
              <image src='../image/index.png'></image>
            </view>
            <view class='text'>
              <view>
                <text class='title'>2019 大理马拉松</text>
              </view>
              <view class='address'>
                <text>云南省 大理白族自治州 大121212121212</text>
              </view>
              <view class='project'>
                <text>羽毛球赛 单打</text>
                <text>已参赛</text>
              </view>
            </view>
          </view>
        </view>
      </scroll-view>
    </view>
    <view class = "{{currentTab == 2 ? 'show':'hidden'}}">
      <scroll-view>
      <view wx:if="{{''==''}}" class='none'>
          <text>暂无数据！</text>
        </view>
        <view class='match-box' wx:for='{{myRegistrationList}}' wx:for-item="{{myRegistration}}" wx:key="{{index}}">
          <view class='time'>
            <text>{{myRegistration.endtime}}</text>
            <text>开始</text>
          </view>
          <view class='content'>
            <view class='photo'>
              <image src='{{myRegistration.img_orogin}}'></image>
            </view>
            <view class='text'>
              <view>
                <text class='title'>{{myRegistration.title}}</text>
              </view>
              <view class='address'>
                <text>{{myRegistration.title}}</text>
              </view>
              <view class='project'>
                <text>羽毛球赛 单打</text>
                <text>已报名 98人</text>
              </view>
            </view>
          </view>
        </view>
        <view class='match-box'>
          <view class='time'>
            <text>19年01月28日  23：00</text>
            <text></text>
          </view>
          <view class='content'>
            <view class='photo'>
              <image src='../image/index.png'></image>
            </view>
            <view class='text'>
              <view>
                <text class='title'>2019 大理马拉松</text>
              </view>
              <view class='address'>
                <text>云南省 大理白族自治州 大121212121212</text>
              </view>
              <view class='project'>
                <text>羽毛球赛 单打</text>
                <text>已参赛</text>
              </view>
            </view>
          </view>
        </view>
      </scroll-view>
    </view>
    <view class = "{{currentTab == 3 ? 'show':'hidden'}}">
      <scroll-view>
        <view wx:if="{{myReleaseList==''}}" class='none'>
          <text>暂无数据！</text>
        </view>
        <view class='match-box' bindtap='goProjectList' wx:for="{{myReleaseList}}" wx:for-item="myRelease" data-matchid='{{myRelease.id}}' wx:key="{{index}}">
          <view class='time'>
            <text>{{myRelease.endtime}}</text>
            <text></text>
          </view>
          <view class='content'>
            <view class='photo'>
              <image src='{{myRelease.img_orogin}}'></image>
            </view>
            <view class='text'>
              <view>
                <text class='title'>{{myRelease.title}}</text>
              </view>
              <view class='address'>
                <text>{{myRelease.weizhi}}</text>
              </view>
              <view class='project'>
                <text>---</text>
                <button bindtap='goNumberApplicants' data-matchid='{{myRelease.id}}'>已报名98人</button> 
              </view>
            </view>
            <view class='transfer'>
              <button bindtap='goTransfer' disabled="{{false}}">转移</button>
            </view>
          </view>
        </view>
        <view class='match-box'>
          <view class='time'>
            <text>19年01月28日  23：00</text>
            <text></text>
          </view>
          <view class='content'>
            <view class='photo'>
              <image src='../image/index.png'></image>
            </view>
            <view class='text'>
              <view>
                <text class='title'>2019 大理马拉松</text>
              </view>
              <view class='address'>
                <text>云南省 大理白族自治州 大121212121212</text>
              </view>
              <view class='project'>
                <text>羽毛球赛 单打</text>
                <text>已结束</text>
              </view>
            </view>
            <view class='transfer'>
              <button disabled="{{true}}" bindtap='goTransfer'>转移</button>
            </view>
          </view>
        </view>
        <!--项目选项卡-->
        <view class='cover' wx:if="{{selectEvent}}"  bindtap='hideModal' catchtouchmove="move"></view>
        <view class='select' wx:if="{{selectEvent}}" animation='{{animationData}}'>
        <icon type="clear" size="45rpx" bindtap='hideModal' />
        <scroll-view class="selectList" scroll-y="true">
        <!--<checkbox-group>
            <label wx:for="{{selectLists}}" wx:for-item="select" data-index="{{index}}" bindtap="goSelectList">
              <checkbox value="{{select.name}}" checked="{{select.selected}}"></checkbox>
              <text class='selectText'>{{select.team_name}}</text>
              <text class='selectPrice'>￥{{select.team_price}}</text>
            </label>
          </checkbox-group>-->
          <radio-group class="radio-group">
            <label wx:for="{{projectList}}" wx:for-item="project"  data-projectid="{{project.id}}"  bindtap='selectProject' wx:key="{{index}}">
              <radio color='#E51C23' checked="{{index==0?'true':''}}" ></radio>
              <text class='selectText'>{{project.team_name}}</text>
            </label>
          </radio-group>
        </scroll-view>
        <view class='totalPrice'>
          <button bindtap='goOrganiser'>确定</button>
        </view>
        </view>
      </scroll-view>
    </view>
  </view>
</view>
