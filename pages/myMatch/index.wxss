/* pages/myMatch/index.wxss */
page{
  background: #F4F8FB 100%;
}
.container{
  margin: 0;
  padding: 0;
}
.option{
  text-align: center;
  display: flex;
  flex-flow: row;
  justify-content: space-between;
  width: 100%;
  height: 2rem;
  line-height: 2rem;
  font-size: 0.78rem;
  color: #101010;
  border-bottom: 0.06rem #BBBBBB solid;
  background: #ffffff;
}
.option view{
  display: block;
  align-items: center;
  width: 25%;
  padding: 0 0.5rem;
}
.option view text{
  display: block;
  width: 100%;
}
.active{
  color:#F65959;
  border-bottom: 0.08rem solid #F65959;
  font-weight: 400;
}
.show{
  display: block;
}
.hidden{
  display: none;
}
/*内容区域*/
.introduction{
  width: 100%;
  font-size: 0.78rem;
  color: #101010;
}
/****************待参赛*********************/
.match-box{
  width: 100%;
  height: 7.69rem;
  display: flex;
  flex-flow:  column nowrap;
  padding:  0 0.5rem;
  box-sizing: border-box;
  border: 0.06rem rgb(226, 226, 226) solid;
  box-shadow: 0rem 0rem 0.13rem 0rem rgba(226, 226, 226);
  margin: 1rem 0;
  background: #ffffff;
}
.time{
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  width: 100%;
  height: 2rem;
  font-size: 0.88rem;
}
.content{
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  justify-content: flex-start;
  width: 100%;
}
.content .photo{
  margin-right: 0.5rem;
  width: 5rem;
  height: 5rem;
}
.photo image{
  width: 100%;
  height: 100%;
  border-radius: 0.25rem;
}
.content .text{
  width: 100%;
  display: flex;
  flex-flow: column nowrap;
  font-size: 0.88rem;
  color: #101010;
}
.text .title{
  display: -webkit-box;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:1;
  text-overflow:ellipsis;
  overflow: hidden;
  margin-bottom: 0.2rem;
}
.content .address{
  font-size: 0.75rem;
  display: -webkit-box;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:2;
  text-overflow:ellipsis;
  overflow: hidden;
  margin-bottom: 0.2rem;
}
.content .project{
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
}
.transfer{
  position: absolute;
  right: 1rem;
  display: flex;
  flex-flow: column wrap;
  justify-content: center;
  align-items: center;
  width: 2.5rem;
  padding: 0;
  margin: 0;
  
}
.transfer button{
  top: -3.01rem;
  display: flex;
  padding: 0;
  flex-flow: row nowrap;
  justify-content: center;
  align-items: center;
  border-top-left-radius: 0rem;
  border-top-right-radius: 0rem;
  border-bottom-left-radius: 0.25rem;
  border-bottom-right-radius: 0.25rem;
  width: 2.5rem;
  height: 3rem;
  background: #E51C23;
  color: #ffffff;
  font-size: 0.7rem;
}
.transfer button::after{
  border: none;
}