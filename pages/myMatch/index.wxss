/* pages/myMatch/index.wxss */
page{
  background: #F4F8FB 100%;
}
.container{
  margin: 0;
  padding: 0;
}
.option{
  text-align: center;
  display: flex;
  flex-flow: row;
  justify-content: space-between;
  width: 100%;
  height: 2rem;
  line-height: 2rem;
  font-size: 0.78rem;
  color: #101010;
  border-bottom: 0.06rem #BBBBBB solid;
  background: #ffffff;
}
.option view{
  display: block;
  align-items: center;
  width: 25%;
  padding: 0 0.5rem;
}
.option view text{
  display: block;
  width: 100%;
}
.active{
  color:#F65959;
  border-bottom: 0.08rem solid #F65959;
  font-weight: 400;
}
.show{
  display: block;
}
.hidden{
  display: none;
}
/*内容区域*/
.introduction{
  width: 100%;
  font-size: 0.78rem;
  color: #101010;
}
/****************待参赛*********************/
.match-box{
  width: 100%;
  height: 7.69rem;
  display: flex;
  flex-flow:  column nowrap;
  padding:  0 0.5rem;
  box-sizing: border-box;
  border: 0.06rem rgb(226, 226, 226) solid;
  box-shadow: 0rem 0rem 0.13rem 0rem rgba(226, 226, 226);
  margin: 1rem 0;
  background: #ffffff;
}
.time{
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  width: 100%;
  height: 2rem;
  font-size: 0.88rem;
}
.content{
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  justify-content: flex-start;
  width: 100%;
}
.content .photo{
  margin-right: 0.5rem;
  width: 5rem;
  height: 5rem;
}
.photo image{
  width: 100%;
  height: 100%;
  border-radius: 0.25rem;
}
.content .text{
  display: flex;
  flex-flow: column nowrap;
  font-size: 0.88rem;
  color: #101010;
  flex: 1;
}
.text .title{
  display: -webkit-box;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:1;
  text-overflow:ellipsis;
  overflow: hidden;
  margin-bottom: 0.2rem;
}
.content .address{
  font-size: 0.75rem;
  display: -webkit-box;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:2;
  text-overflow:ellipsis;
  overflow: hidden;
  margin-bottom: 0.2rem;
}
.content .project{
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  align-items: center;
}
.project button{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 4.5rem;
  font-size: 0.7rem;
  padding: 0.2rem;
  height: 2em;
  margin: 0;
  box-sizing: border-box;
}
.transfer{
  position: absolute;
  right: 1rem;
  display: flex;
  flex-flow: column wrap;
  justify-content: center;
  align-items: center;
  width: 2.5rem;
  padding: 0;
  margin: 0;
  
}
.transfer button{
  top: -3.01rem;
  display: flex;
  padding: 0;
  flex-flow: row nowrap;
  justify-content: center;
  align-items: center;
  border-top-left-radius: 0rem;
  border-top-right-radius: 0rem;
  border-bottom-left-radius: 0.25rem;
  border-bottom-right-radius: 0.25rem;
  width: 2.5rem;
  height: 3rem;
  background: #E51C23;
  color: #ffffff;
  font-size: 0.7rem;
}
.transfer button::after{
  border: none;
}
/*******************************/
.none{
  margin-top: 10rem;
  display: flex;
  justify-content: center;
  align-items: center;
}
/*********************************/
/*遮盖*/
.cover{
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  background-color: rgba(0, 0, 0, 0.2);
  z-index: 4;
}
.select{
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 14.83rem;
  background: #ffffff;
  border-radius: 0.56rem 0.56rem 0 0;
  z-index: 5;
}
.select icon{
  display: flex;
  position: relative;
  right: 1rem;
  top: 0.5rem;
  float: right;
}
.selectList{
  display: flex;
  width: 100%;
  padding: 0 0.5rem;
  flex-flow: column nowrap;
  margin-top: 2rem;
  overflow:hidden;
  height:9rem;
  font-size: 0.78rem;
  color: #E51C23;
}
.selectList radio-group label{
  display: flex;
  margin: 0.7rem 1rem 0.7rem 0.5rem;
}
.selectText{
  width: 100%;
  margin: 0 auto;
  overflow: hidden;
}
.selectPrice{
  display: flex;
  align-items: center;
  width: 3rem;
}
.totalPrice{
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  align-items: center;
  margin: 1rem;
  height: 2.17rem;
  line-height: 2.17rem;
}

.totalPrice button{
  width: 4.83rem;
  height: 1.89rem;
  line-height: 1.89rem;
  display: flex;
  justify-content: center;
  align-items: center;
  position: absolute;
  right: 1rem;
  color: #FFFFFF;
  background: #E51C23;
  font-size: 0.78rem;
  border-radius: 0.83rem;
}
/***********************自定义滚动条******************************/
/*定义滚动条高宽及背景 高宽分别对应横竖滚动条的尺寸*/
::-webkit-scrollbar
{
width: 0.2rem;
height: 1rem;
background-color: #ffffff;
/*color: transparent;*/
}
/*定义滚动条轨道 内阴影+圆角*/
::-webkit-scrollbar-track
{
-webkit-box-shadow: inset 0 0 0.2rem rgba(0,0,0,0.1);
border-radius: 0.2rem;
background-color: #ffffff;
}
/*定义滑块 内阴影+圆角*/
::-webkit-scrollbar-thumb
{
border-radius: 10px;
-webkit-box-shadow: inset 0 0 0.2rem rgba(0,0,0,.1);
background-color: rgba(0,0,0,.1);
}