/* pages/addAddress/index.wxss */
.container{
  margin: 0;
  padding: 0;
}
.content{
  display: flex;
  flex-flow: column nowrap;
  justify-content: center;
  width: 100%;
}
form{
  display: flex;
  flex-flow: column nowrap;
  width: 100%;
  box-sizing: border-box;
  font-size: 0.75rem;
}
.section,.switch-section{
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  justify-content: flex-start;
  width: 100%;
  height: 2.88rem;
  margin-top: 0.5rem;
  padding: 0 1rem;
  box-sizing: border-box;
  border-bottom: 0.06rem #F9F6F6 solid;
}
.switch-section{
  justify-content: space-between;
}
.section-title{
  display: flex;
  width: 5rem;
}
picker{
  width: 100%;

}
.bottom{
  display: flex;
  flex-flow:  row nowrap;
  justify-content: space-between;
  align-items: center;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background: #FFFFFF;
}
.bottom button{
  width: 45%;
}
.save{
  background: #E51C23;
  color: #FFFFFF;
}
