/* pages/bindingPhone/index.wxss */
.container{
  margin: 0;
  padding: 0;
  background: #FFFFFF;
}
.binding-phone{
  display: flex;
  flex-flow: column nowrap;
  width: 100%;
  padding: 3rem 2rem;
  box-sizing:  border-box;
}
.binding-phone .section{
  display: flex;
  flex-flow: row nowrap;
  justify-content: flex-start;
  align-items: center;
  width: 100%;
  height: 2rem;
  margin-bottom: 1rem;
  font-size: 0.88rem;
}
.section image{
  width:1.5rem;
  height:1.5rem;
}
.section input{
  width: 90%;
  border-bottom: 0.06rem #BBBBBB solid;
  color: #101010; 
  margin-left: 0.5rem;
}
.section button{
  position: absolute;
  margin-top: -0.5rem;
  right: 1.8rem;
  display: flex;
  justify-content: center;
  align-items: center;
  width:5.5rem;
  height:2rem;
  padding: 0.5rem;
  background: #FFFFFF;
  color: #101010;
  border-radius: 1.56rem;
  font-size: 0.7rem;
  border: 0.06rem #BBBBBB solid;
  z-index: 2;
}
.pact{
  display: flex;
  align-items: center;
  font-size: 0.88rem;
}
.pact text{
  color: #3f51b5;
}
.submit{
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  background: #E51C23;
  color: #FFFFFF;
  border-radius: 0;
}