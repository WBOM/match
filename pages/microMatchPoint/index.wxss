/* pages/microMatchPoint/index.wxss */
.container{
  width: 100%;
  margin: 0;
  padding: 0;
  background: #F9F9F9;
}
.header{
  width: 100%;
  box-sizing: border-box;
  margin-top: 0.5rem;
  padding: 1rem;
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  align-items: center;
  line-height: 5rem;
  height: 5rem;
}
.header image{
  display: flex;
  width: 2.81rem;
  height: 2.81rem;
  border-radius: 50%;
}
.header text{
  margin-left: 1rem;
  width: 100%;
  font-size: 0.88rem;
  color: #101010;
}
/***************************************/
.main{
  width: 100%;
  box-sizing: border-box;
  display: flex;
  flex-flow: row wrap;
  align-items: center;
  justify-content: flex-start;
  overflow: hidden;
}
.main-box{
  display: flex;
  flex-flow: column nowrap;
  width: 45%;
  margin-bottom: 0.7rem;
  margin-left: 0.7rem;
  height: 12.31rem;
  border-radius: 0.5rem;
  background: #FFFFFF;
}
.main-box image{
  width:100%;
  height: 8.88rem;
  border-radius: 0.5rem;
}
.main-box text{
  display: flex;
  align-items: center;
  justify-content: flex-start;
  width: 100%;
  height: 2.44rem;
  line-height: 1.22rem;
  margin: 0.5rem auto;
  padding: 0 0.5rem;
  box-sizing: border-box;
  font-size: 0.75rem;
}