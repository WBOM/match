<!--pages/refereeApplication/index.wxml-->
<view class='container'>
  <form bindsubmit="formSubmit" bindreset="formReset">  
    <view class="section">
      <view class="section__title">姓名</view>
      <input name="name" placeholder="请输入姓名" />
    </view>
    <view class="section">
      <view class="section__title">手机号</view>
      <input name="phone" placeholder="请输入姓名" />
    </view>
    <view class="section">
      <view class="section__title">验证码</view>
      <input name="code" placeholder="请输入验证码" />
      <button class='verificationCode'>发送验证码</button>
    </view>
    <view class='buttom'>
      <button class='reset' form-type="reset">重置</button>
      <button class='submit' form-type='submit'>提交申请</button>
    </view>
  </form>
</view>
