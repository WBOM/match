/* pages/manageClass/index.wxss */
page{
  background: #F9F9F9;
}
.container{
  display: flex;
  flex-flow:  column nowrap;
  margin: 0;
  padding: 0;
  width: 100%;
  font-size: 0.88rem;
}
form{
  width: 100%;
  height: 3.25rem;
  display: flex;
  margin: 0;
  padding: 1rem;
  box-sizing: border-box;
  margin-bottom: 0.5rem;
  background: #FFFFFF;
}
.head{
  width: 100%;
  height: 100%;
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  align-items: center;
  
}
.head .section{
  width: 16rem;
  display: flex;
  margin-right: 1rem;
}

.head .confirm{
  width: 4rem;
  height: 2rem;
}
.confirm button{
  position: absolute;
  right: 1rem;
  width: 4rem;
  height: 2rem;
  padding: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #E51C23;
  color: #FFFFFF;
}
.main{
  display: flex;
  flex-flow: column nowrap;
  width: 100%;
  background: #FFFFFF;
  padding: 0 1rem;
  box-sizing: border-box;
}
.class-box{
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  align-items: center;
  border-bottom: 0.06rem #BBBBBB solid;
  padding:0.5rem;
}
.delete{
  color: #E51C23;
  margin-left: 0.5rem;
}