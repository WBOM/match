/* pages/matchDetails/index.wxss */
.container{
  margin: 0;
  padding: 0;
  background: #F4F8FB;
}
.title{
  display: block;
  width: 100%;
  height: 1.94rem;
  line-height: 1.94rem;
  text-align: center;
  font-size: 0.78rem;
  color: #101010;
  margin: 0.5rem auto;
}
/*********************选项************************/
.option{
  text-align: center;
  display: flex;
  flex-flow: row;
  justify-content: space-between;
  width: 100%;
  height: 2rem;
  line-height: 2rem;
  font-size: 0.78rem;
  color: #101010;
  border-bottom: 0.06rem #BBBBBB solid;
}
.option view{
  display: block;
  align-items: center;
  width: 25%;
  padding: 0 0.8rem;
}
.option view text{
  display: block;
  width: 100%;
}
.active{
  color:#F65959;
  border-bottom: 0.08rem solid #F65959;
  font-weight: 400;
}
.show{
  display: block;
}
.hidden{
  display: none;
}
/*内容区域*/
.introduction{
  width: 100%;
  font-size: 0.78rem;
  color: #101010;
  display: flex;
  flex-flow: column nowrap;
  justify-content: space-between;
  
}
.introduction .text{
  display: flex;
  flex-flow: column wrap;
  font-size: 0.88rem;
  line-height: 1.5rem;
  margin: 1rem;
}
.text text{
  margin-bottom: 1rem;
}
.button{
  margin: 0;
  display: flex;
  flex-flow: row nowrap;
}
.introduction button{
  width: 45%;
  height: 2.22rem;
  line-height: 2.22rem;
  background: #E51C23;
  color: #ffffff;
  border-radius: 0.28rem;
  font-size: 0.78rem;
}
.introduction button:first-child{
  background: #259B24;
}
/**************************************************/
.personnel-box{
  display: flex;
  width: 100%;
  flex-flow: column nowrap;
  text-align: center;
  padding-bottom: 1rem;
}
.personnel-box>text{
  color: #101010;
  font-size: 0.89rem;
  margin: 0.8rem auto;
}
.personnel-list{
  width: 100%;
  min-height: 5rem;
  display: flex;
  flex-flow: column nowrap;
}
.personnel{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  margin: 0.5rem 1rem 0.5rem;
  overflow: hidden;
  text-align: left;
  width: 100%;
  height: 2rem;
  line-height: 2rem;
}
.personnel image{
  display: flex;
  width: 2rem;
  height: 2rem;
  border-radius: 2rem;
}
.personnel text{
  display: flex;
  overflow: hidden;
  display: -webkit-box;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:1;
  text-overflow:ellipsis;
  margin-left: 0.5rem;
}
.application{
  width: 95%;
  height: 2.22rem;
  line-height: 2.22rem;
  margin: 0 1rem;
  background: #E51C23;
  color: #ffffff;
  border-radius: 0.28rem;
  font-size: 0.78rem;
}

