.container{
  margin: 0;
  background: #F9F9F9;
  font-size: 0.88rem;
  color: #101010;
  width: 100%;
  padding: 0;
}
.header{
  width: 100%;
  display: flex;
  flex-flow: column nowrap;
  box-sizing: border-box;
  padding:1rem 1.5rem;
  height:10rem;
  background: #ffffff;
}
.header view{
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 0.88rem;
  color: #101010;
}
.header view text{
  flex: 1;
}
.header view button{
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 0;
  height: 1.6rem;
  width: 8rem;
  color: #101010;
  margin-bottom: 0.5rem;
}
.time{
  width: 100%;
  display: flex;
  flex-flow: row nowrap;
  font-size: 0.88rem;
  height: 3.5rem;
  box-sizing: border-box;
  padding: 0 1.5rem;
  line-height: 3.5rem;
}
/********************************/
.main{
  width: 100%;
  display: flex;
  flex-flow: column nowrap;
  box-sizing: border-box;
}
.section{
  background: #ffffff;
  width: 100%;
  display: flex;
  flex-flow:column nowrap;
  justify-content: center;
  align-items: center;
}
.section-title{
  margin-bottom: 1rem;
}
.section picker{
  width: 65%;
  display:block;
  box-sizing: border-box;
  border-radius: 0.25rem;
  border: 0.06rem #BBBBBB solid;
  padding: 0.1rem 0.3rem;
  margin-bottom: 0.5rem;
}
.picker{
  margin: 0 auto;
  width: 16rem;
}
.triangle{
  right: 23%;
  margin-top: -0.8rem;
}
/*******排名**********/
.rank{
  width: 100%;
  display: flex;
  flex-flow: column nowrap;
  justify-content: flex-start;
  box-sizing: border-box;
}
.rank-list{
  background: #ffffff;
  padding: 1rem 1.5rem 1rem;

}
.rank-list text:first-child{
  display: inline-flex;
  margin-bottom: 0.5rem;
}
.rank-list view{
  display: flex;
  width: 100%;  
  flex-flow: row nowrap;
  justify-content: space-between;
  height: 2.2rem;
  line-height: 2.2rem;
  border-bottom: 0.06rem #BBBBBB solid;
}
.rank-list view text:first-child{
  flex: 3;
}
.rank-list view text{
  flex: 1;
}
.show{
  display: block;
}
.hidden{
  display: none;
}
/**************对抗信息****************/
.vs-list{
  width: 100%;
  display: flex;
  flex-flow: column nowrap; 
}
.vs-box{
  display: flex;
  flex-flow: column nowrap;
  justify-content: space-between;
  width: 100%;
  height: 8.56rem;
  background: #ffffff;
  margin-top: 1rem;
}
.score{
  text-align: center;
  width: 3rem;
  margin: 0.5rem auto 0;
  color: #101010;
  font-size: 1rem;
}
.player{
  width: 100%;
  display: flex;
  flex-flow: row nowrap;
  text-align: center;
  font-size: 1.25rem;
}
.player text{
  flex: 1;
}
.vs-information{
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  padding: 0 1.5rem;
  font-size: 0.88rem;
  margin-bottom: 0.5rem;
}
/*****************************/
.vs-box form .score{
  width: 8rem;
}
.vs-box form .score .section{
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  align-items: center;
  margin: 0 auto;
}
.section input{
  display: block;
  border: 0.06rem #BBBBBB solid;
  border-radius: 0.25rem;
}
.vs-box form .player{
  margin: 1rem 0;
}
.vs-box form .vs-information{
  display: flex;
  flex-flow: row nowrap;
  height: 1.5rem;
  line-height: 1.5rem;
  font-size: 0.88rem;
  padding: 0 1.5rem;
  margin-top: 1.8rem;
  width: 100%;
  box-sizing: border-box;
}
.section-title{
  width: 4rem;
  height: 1.5rem;
}
.section-date{
  display: block;
  border: 0.06rem #BBBBBB solid;
  border-radius: 0.25rem;
  margin-top: -0.03rem;
  width: 5.5rem;
  height: 1.5rem;
  line-height: 1.5rem;
  margin-right: 0.2rem;
}
.section-time{
  display: block;
  border: 0.06rem #BBBBBB solid;
  border-radius: 0.25rem;
  margin-top: -0.03rem;
  width: 4rem;
  height: 1.5rem;
  line-height: 1.5rem;
  margin-right: 0.2rem;
}
.date .picker{
  display: block;
  height: 1.5rem;
  line-height: 1.5rem;
  color: #9e9e9e;
  margin-left: 0.2rem;
}
.time .picker{
  display: block;
  height: 1.5rem;
  line-height: 1.5rem;
  color: #9e9e9e;
  margin-left: -1rem;
}
.vs-box form  button{
  width: 5rem;
  height: 1.5rem;
  line-height: 1.5rem;
  margin-left: 0.5rem;
  padding: 0;
  align-items: center;
  justify-content: center;
  font-size: 0.88rem;
  background: #ffffff;
}