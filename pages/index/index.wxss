/**index.wxss**/
/***************************头部图片********************************/
.container{
  margin: 0;
  padding: 0;
  background: #F4F8FB;
}
.title-img{
  width: 100%;
  height: 10.5rem;
}
.title-img swiper{
  height: 100%;
  display: flex;
}
.title-img image{
  display: flex;
  width: 100%;
  height: 100%;
}
/***************************赛事分类********************************/
.main{
  display: flex;
  width: 100%;
  max-height: 11.56rem;
  background: #FFFFFF;
  flex-direction: row;
}
.main-list{
  display: flex;
  overflow:hidden;
  align-items: center;
  justify-content: space-around;
  flex-flow:row wrap;
  padding-top: 1rem;  
}
.main-list-box{
  display: flex;
  flex-flow: column wrap;
  padding: 1px;
  width: 3.8rem;
  height: 4rem;
}
.main-list-box image{
  margin: 0 auto;
  width:2rem;
  height: 2rem;
  display: block;
}
.main-list-box text{
  display: block;
  color: rgb(16, 16, 16);
  text-align: center;
  margin: 0.5rem auto 0;
  height: 1rem;
  font-size: 0.88rem;
}
/******************************推荐*****************************/
.recommend{
  display: flex;
  width: 100%;
  flex-flow:row wrap;
}
.recommend-title{
  display: block;
  padding: 0.5rem;
  font-size: 1rem;
  margin-bottom: 0.5rem;
  width: 100%;
  height: 1.5rem;
  line-height: 1.5rem;
}
.recommend-list{
  width: 100%;
  display: flex;
  overflow:hidden;
  flex-flow:row wrap;
  justify-content: flex-start;
  margin: 0 0 0 0.5rem;
}
.recommend-list-box{
  display: flex;
  flex-flow: column nowrap;
  text-align: center;
  overflow: hidden;
  float: left;
  border-radius: 0.4rem;
  margin-bottom: 1rem;
  margin-right: 0.5rem;
  width: 47%;
  height: 11.7rem;
  background: #FFFFFF;
  box-shadow: 0rem 0rem 0.13rem 0rem rgba(216, 236, 251, 1);
}
.recommend-list-box image{
  display: flex;
  width: 100%;
  height: 8.88rem;
  border-radius: 0.4rem;
}
.recommend-list-box text{
  display: -webkit-box;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:2;
  text-overflow:ellipsis;
  overflow: hidden;
  margin-top: 0.22rem;
  font-size: 0.75rem;
  padding: 0 0.3rem;
  height: 2.44rem;
  line-height: 1.22rem;
  color: #101010;
}
/******************************************/
.notice{
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  width: 100%;
  height: 1.75rem;
  overflow: hidden;
  background: #FFFFFF;
}
.notice icon{
  margin: 0.3rem;
}
.notice .clear{

}
.notice text{
  display: flex;
  height: 1.75rem;
  line-height: 1.75rem;
  font-size: 0.75rem;
}