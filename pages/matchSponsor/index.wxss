/* pages/matchSponsor/index.wxss */
.cotainer{
  margin: 0;
  padding: 0;
  background: #F4F8FB;
}
/*************标题****************/
.title{
  display: block;
  width: 100%;
  height: 1.94rem;
  line-height: 1.94rem;
  text-align: center;
  font-size: 0.78rem;
  color: #101010;
  margin: 0.2rem auto;
}
/************选项卡***************/
.option{
  text-align: center;
  display: flex;
  flex-flow: row;
  justify-content: space-between;
  width: 100%;
  height: 2rem;
  line-height: 2rem;
  font-size: 0.78rem;
  color: #101010;
  border-bottom: 0.06rem #BBBBBB solid;
}
.option view{
  display: block;
  align-items: center;
  width: 25%;
  padding: 0 0.8rem;
}
.option view text{
  display: block;
  width: 100%;
}
.active{
  color:#F65959;
  border-bottom: 0.1rem solid #F65959;
  font-weight: 400;
}
.show{
  display: block;
}
.hidden{
  display: none;
}
/*内容区域*/
.introduction{
  display: flex;
  flex-flow: column nowrap;
  box-sizing: border-box;
  width: 100%;
  min-height: 100vh;
  font-size: 0.78rem;
  color: #101010;
}
.introduction view scroll-view{
  margin: 0.5rem 0 0 0;
}
/****************个人赞助******************/
.sponsor-box{
  position: relative;
  width: 100%;
  height: 9rem;
  display: flex;
  flex-flow: row nowrap;
  margin-bottom: 0.5rem;
  padding: 0.5rem 0;
  background: #ffffff;
  border-bottom: 0.06rem #BBBBBB solid;
  border-radius: 0.2rem;
}
.sponsor-box image{
  display: flex;
  width: 35%;
  height: 9rem;
  margin: 0 0.5rem;
}
.sponsor-box view{
  display: flex;
  flex-flow: column nowrap;
  width: 65%;
}
.sponsor-box view text{
  display: flex;
  width: 100%;
  margin-top: 0.5rem;
}
.name{
  color: #B3B3B3;
  font-size: 0.75rem;
}
.product-name{
  text-align: left;
  box-sizing: border-box;
  padding-right: 1rem;
  font-size: 0.88rem;
  color: #101010;
  height: 2.81rem;
  line-height: 1.4rem;
}
.price{
  position: absolute;
  bottom: 1rem;
  display: flex;
  color:#E60B30;
  font-size: 1.13rem;
}
.other .name{
  font-size: 0.88rem;
  color: #2D2D2D;
}
.other .product-name{
  padding: 0.2rem;
  font-size: 0.75rem;
  display: -webkit-box;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:4;
  text-overflow:ellipsis;
  height: auto;
  overflow: hidden;
  box-sizing: border-box;
}
/***************发赞助按钮*****************/
.initiate{
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 2.22rem;
  line-height: 2.22rem;
  background: #E51C23;
  color: #ffffff;
  border-radius: 0.28rem;
  font-size: 0.78rem;
}
